{
    "name": "js-tasks-runner",
    "version": "1.0.0",
    "description": "",
    "main": "index.html",
    "scripts": {
        "custom-gitignore": "echo \"dist\" >> .gitignore",
        "init-lint": "eslint --init",
        "init-project": "npm install && npm-run-all init:*",
        "init:dirs": "mkdirp dist src/sass src/css src/vendor src/images src/js",
        "init:files": "touch README.md src/index.html src/sass/style.scss src/js/index.js",
        "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
        "test": "npm-run-all test:*",
        "test:html": "globstar nu-html-checker dist/*.html",
        "test:js": "eslint src/js/",
        "test:scss": "stylelint src/sass/",
        "build": "npm-run-all build:* test",
        "build:copy": "copyfiles -a -u 1 -e\"**/js/*\" -e \"**/sass/**/*\" -e \"**/.gitkeep\" \"src/**/*\" dist",
        "build:webpack": "webpack",
        "build:sass": "node-sass --output-style compact -o dist/css src/sass",
        "build:autoprefixer": "postcss dist/css/style.css --use autoprefixer -d ./dist/css",
        "build-dev": "npm-run-all build-dev:sass build:autoprefixer",
        "build-dev:sass": "node-sass --output-style expanded --source-map true -o dist/css src/sass",
        "watch": "npm-run-all build:* build-dev -p watch:*",
        "watch:webpack": "webpack --watch",
        "watch:browsersync": "browser-sync start --server dist --files \"dist/**/*\"",
        "watch:sassprefixer": "onchange \"src/sass/**/*.scss\" -- npm run build-dev",
        "watch:copy": "onchange -e\"**/js/*\" -e \"**/sass/**/*\" -e \"**/.gitkeep\" \"src/**/*\" -- copyfiles -a -u 1 {{changed}} dist"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {},
    "devDependencies": {
        "autoprefixer": "^10.2.3",
        "browser-sync": "^2.26.3",
        "copyfiles": "^2.1.0",
        "eslint": "^7.19.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-import": "^2.22.1",
        "globstar": "^1.0.0",
        "mkdirp": "^0.5.1",
        "node-sass": "^4.11.0",
        "npm-run-all": "^4.1.5",
        "nu-html-checker": "^0.1.0",
        "onchange": "^5.2.0",
        "postcss": "^8.2.4",
        "postcss-cli": "^8.3.1",
        "stylelint": "^9.10.1",
        "stylelint-scss": "^3.5.4",
        "webpack": "^5.4.0",
        "webpack-cli": "^4.2.0"
    }
}
